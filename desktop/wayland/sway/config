# MOD KEY
set $mod Mod4
# Direction Key
set $left h
set $down j
set $up k
set $right l

include "common"

# Wall paper
output * bg assets/wallpaper.jpg fill

# Exit Sway
bindsym $mod+Shift+e exec swaynag -t warning \
	-m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' \
	-B 'Yes, exit sway' 'swaymsg exit'

# Swaylock after 5 minutes
exec swayidle -w \
	timeout 300 'swaylock'
bindsym $mod+shift+l exec swaylock

# Touch pad
input "2321:21128:HTIX5288:00_0911:5288_Touchpad" {
    dwt enabled
    tap enabled
    natural_scroll disabled
    middle_emulation enabled
}

# Keyboard acceleration
input "1:1:AT_Translated_Set_2_keyboard" {
    repeat_rate 39
    repeat_delay 400
}

# Waybar
bar { 
    swaybar_command waybar 
}

# Fcitx
exec fcitx5

# Bluetooth
exec bt-agent --capability=NoInputNoOutput

# Window
default_border pixel 0
default_floating_border normal
hide_edge_borders smart

smart_gaps on
gaps inner 5

# DBus
exec dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway

# Mako
exec --no-startup-id mako

# Screenshot
bindsym ctrl+F1 exec grim -g "$(slurp)" - | wl-copy
# Scan QR Code
bindsym ctrl+F2 exec grim -g "$(slurp)" - | zbarimg -q --noxml - | perl -pe 's/^.*?://g' | wl-copy
# Format Code
bindsym ctrl+alt+f exec wl-paste | black - | wl-copy
# OCR

# HDMI
set $laptop "Chimei Innolux Corporation 0x14D4 0x00000000"
bindswitch --reload --locked lid:on output $laptop disable
bindswitch --reload --locked lid:off output $laptop enable
# output eDP-1 pos 0 1080
# output HDMI-A-2 pos 0 0

# GeoClue for Gammastep
exec --no-startup-id /usr/lib/geoclue-2.0/demos/agent

# Firefox
bindsym $mod+p exec firefox 

# Redshift
exec gammastep

# Xwayland
for_window [shell="xwayland"] title_format "[X] %title"

# Polkit
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1

# Wines
for_window [class=".*\.exe.*"] fullscreen enable

# Saladict
for_window [title="沙拉查词"] floating enable

# Okular
for_window [title="新建文本笔记"] floating enable

