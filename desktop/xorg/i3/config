# Grammar for Discord
bindsym $mod+Shift+d exec zsh /home/yubo/config/apps/gui/discord/discord.sh

# Markdown Formatter
bindsym $mod+Shift+m exec xdotool key ctrl+c && xclip -o -t TEXT -selection clipboard | mdformat - | xclip -selection clipboard && xdotool key ctrl+v

# Wrapper
bindsym $mod+Shift+w exec xclip -o -t TEXT -selection clipboard | fmt -w 80 | xclip -sel clip && sleep 0.1 && xdotool key ctrl+v
