# Black
bindsym $mod+Shift+f exec xdotool key ctrl+c && xclip -o -t TEXT -selection clipboard | black - | xclip -selection clipboard && xdotool key ctrl+v

# Tap to Click
exec --no-startup-id xinput set-prop "HTIX5288:00 0911:5288 Touchpad" "libinput Tapping Enabled" 1

