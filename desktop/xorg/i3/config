exec_always --no-startup-id picom --config /home/yubo/config/desktop/xorg/picom/picom.conf

# Fcitx
exec_always --no-startup-id fcitx5

# Bluetooth
exec_always --no-startup-id bt-agent --capability=NoInputNoOutput

